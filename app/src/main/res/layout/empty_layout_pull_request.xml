<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/clErrorLayoutRepository"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivEmptyLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/list_pull_request_empyt_description"
            android:src="@drawable/ic_alert_circle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/list_pull_request_empty"
            app:layout_constraintEnd_toEndOf="@id/ivEmptyLayout"
            app:layout_constraintStart_toStartOf="@id/ivEmptyLayout"
            app:layout_constraintTop_toBottomOf="@id/ivEmptyLayout" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>